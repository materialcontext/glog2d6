<form class="{{cssClass}}" autocomplete="off">

  <header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="Item Name"/>
      </h1>
    </div>
  </header>

  <section class="sheet-body">

    <div class="gear-properties">
      <div class="form-group">
        <label for="system.size">Size</label>
        <select name="system.size">
          {{#select system.size}}
          {{#each gearSizes as |label key|}}
          <option value="{{key}}">{{label}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>

      <div class="form-group">
        <label for="system.value">Value (gp)</label>
        <input type="number" name="system.value" value="{{system.value}}" min="0" step="0.01"/>
      </div>

      <div class="form-group">
        <label for="system.quantity">Quantity</label>
        <input type="number" name="system.quantity" value="{{system.quantity}}" min="1"/>
      </div>

      <div class="form-group">
        <label for="system.slots">Inventory Slots</label>
        <input type="number" name="system.slots" value="{{system.slots}}" min="0"/>
      </div>
    </div>

    <div class="form-group stacked">
      <label for="system.description">Description</label>
      <textarea name="system.description" rows="8">{{system.description}}</textarea>
    </div>

  </section>
</form>
