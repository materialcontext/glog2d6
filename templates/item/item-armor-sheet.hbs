<form class="{{cssClass}}" autocomplete="off">

  <header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="Armor Name"/>
      </h1>
    </div>
  </header>

  <section class="sheet-body">

    <div class="armor-properties">
      <div class="form-group">
        <label for="system.type">Type</label>
        <select name="system.type">
          {{#select system.type}}
          {{#each armorTypes as |label key|}}
          <option value="{{key}}">{{label}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>

      <div class="form-group">
        <label for="system.armorBonus">Armor Bonus</label>
        <input type="number" name="system.armorBonus" value="{{system.armorBonus}}" min="0"/>
      </div>

      <div class="form-group">
        <label for="system.encumbrancePenalty">Encumbrance Penalty</label>
        <input type="number" name="system.encumbrancePenalty" value="{{system.encumbrancePenalty}}" min="0"/>
      </div>
    </div>

    <div class="form-group stacked">
      <label for="system.description">Description</label>
      <textarea name="system.description" rows="8">{{system.description}}</textarea>
    </div>

  </section>
</form>
