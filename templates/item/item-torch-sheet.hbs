<form class="{{cssClass}} torch-item-sheet" autocomplete="off">

  <header class="sheet-header flex flex-center flex-gap-8 p-10 section mb-10">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
    <div class="header-fields w-full">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="Torch Name" class="input text-bold w-full"/>
      </h1>
    </div>
  </header>

  <section class="sheet-body">

    <div class="torch-properties section p-10 mt-15">
      <h3>Light Properties</h3>
      <div class="grid-2 flex-gap-8 mt-8">
        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.lightRadius.bright" class="text-small text-bold text-upper text-muted">Bright Light (ft)</label>
          <input type="number" name="system.lightRadius.bright" value="{{system.lightRadius.bright}}" min="0" step="5" class="input text-center"/>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.lightRadius.dim" class="text-small text-bold text-upper text-muted">Dim Light (ft)</label>
          <input type="number" name="system.lightRadius.dim" value="{{system.lightRadius.dim}}" min="0" step="5" class="input text-center"/>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.lightAngle" class="text-small text-bold text-upper text-muted">Angle (Â°)</label>
          <input type="number" name="system.lightAngle" value="{{system.lightAngle}}" min="0" max="360" step="15" class="input text-center"/>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.lightColor" class="text-small text-bold text-upper text-muted">Color</label>
          <input type="color" name="system.lightColor" value="{{system.lightColor}}" title="Default: #ff8800 (warm orange)" class="input"/>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.slots" class="text-small text-bold text-upper text-muted">Slots</label>
          <input type="number" name="system.slots" value="{{system.slots}}" min="0" class="input text-center"/>
        </div>
      </div>
    </div>

    <div class="torch-duration section p-10 mt-15">
      <h3>Duration Tracking</h3>
      <div class="grid-2 flex-gap-8 mt-8">
        <div class="form-group flex flex-col flex-gap-2">
          <label class="flex flex-center flex-gap-4">
            <input type="checkbox" name="system.duration.enabled" class="duration-enabled-toggle clickable" {{#if system.duration.enabled}}checked{{/if}}/>
            <span class="text-small text-bold text-upper text-muted">Duration Tracking</span>
          </label>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.duration.hours" class="text-small text-bold text-upper text-muted">Max (hours)</label>
          <input type="number" name="system.duration.hours" value="{{system.duration.hours}}" min="1" step="0.5" class="input text-center duration-field"/>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.duration.remaining" class="text-small text-bold text-upper text-muted">Remaining</label>
          <input type="number" name="system.duration.remaining" value="{{system.duration.remaining}}" min="0" step="0.1" class="input text-center duration-field"/>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.duration.burnRate" class="text-small text-bold text-upper text-muted">Burn Rate</label>
          <input type="number" name="system.duration.burnRate" value="{{system.duration.burnRate}}" min="0.1" max="10" step="0.1" class="input text-center duration-field"/>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label class="flex flex-center flex-gap-4">
            <input type="checkbox" name="system.duration.autoExtinguish" {{#if system.duration.autoExtinguish}}checked{{/if}} class="clickable duration-field"/>
            <span class="text-small text-bold text-upper text-muted">Auto-extinguish</span>
          </label>
        </div>
      </div>
    </div>

    <div class="torch-animation section p-10 mt-15">
      <h3>Animation</h3>
      <div class="grid-3 flex-gap-8 mt-8">
        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.lightAnimation.type" class="text-small text-bold text-upper text-muted">Animation</label>
          <select name="system.lightAnimation.type" class="input">
            {{#select system.lightAnimation.type}}
            <option value="">Static (No Animation)</option>
            <option value="torch">Torch Flicker</option>
            <option value="pulse">Pulse</option>
            <option value="chroma">Chroma</option>
            <option value="wave">Wave</option>
            <option value="fog">Fog</option>
            <option value="sunburst">Sunburst</option>
            <option value="dome">Dome</option>
            <option value="emanation">Emanation</option>
            <option value="hexa">Hexa</option>
            <option value="ghost">Ghost</option>
            <option value="energy">Energy</option>
            <option value="roiling">Roiling</option>
            <option value="hole">Black Hole</option>
            {{/select}}
          </select>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.lightAnimation.speed" class="text-small text-bold text-upper text-muted">Speed</label>
          <input type="number" name="system.lightAnimation.speed" value="{{system.lightAnimation.speed}}" min="1" max="10" title="1=Very Slow, 5=Normal, 10=Fast" class="input text-center"/>
        </div>

        <div class="form-group flex flex-col flex-gap-2">
          <label for="system.lightAnimation.intensity" class="text-small text-bold text-upper text-muted">Intensity</label>
          <input type="number" name="system.lightAnimation.intensity" value="{{system.lightAnimation.intensity}}" min="1" max="5" title="1=Subtle, 3=Normal, 5=Strong" class="input text-center"/>
        </div>
      </div>
    </div>

    <div class="form-group flex flex-col flex-gap-2 mt-15">
      <label for="system.description" class="text-small text-bold text-upper text-muted">Description</label>
      <textarea name="system.description" rows="8" class="input">{{system.description}}</textarea>
    </div>

  </section>
</form>
