<form autocomplete="off">
    <div class="form-group flex flex-col flex-gap-2 mb-15">
        <label class="text-small text-bold text-upper text-muted">{{featureName}} Check</label>
        <p class="text-small text-muted">Choose which attribute to use for this thievery check:</p>
    </div>

    <div class="grid-2 flex-gap-8 mb-15">
        {{#each attributes as |attr|}}
        <label class="flex flex-center flex-gap-4 p-8 section clickable">
            <input type="radio" name="attribute" value="{{attr.key}}" {{#if @first}}checked{{/if}}>
            <div class="flex flex-col flex-center">
                <span class="text-bold">{{attr.name}}</span>
                <span class="text-small text-muted">{{numberFormat attr.mod decimals=0 sign=true}}</span>
            </div>
        </label>
        {{/each}}
    </div>

    <div class="form-group flex flex-col flex-gap-2 mb-15">
        <label class="text-small text-muted">Examples:</label>
        <ul class="text-small text-muted" style="margin: 0; padding-left: 16px;">
            <li><strong>Intelligence:</strong> Investigation, research, deduction</li>
            <li><strong>Dexterity:</strong> Lockpicking, pickpocketing</li>
            <li><strong>Strength:</strong> Force locks, break chains</li>
        </ul>
    </div>

    <div class="flex flex-center">
        <button type="submit" class="btn btn-primary p-8">
            <i class="fas fa-dice"></i> Roll
        </button>
    </div>
</form>
