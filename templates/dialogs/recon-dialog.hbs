{{!-- templates/dialogs/recon-dialog.hbs --}}
<form autocomplete="off">
    <div class="form-group flex flex-col flex-gap-2">
        <label class="text-small text-bold text-upper text-muted">Check Type</label>
        <select name="checkType" class="input">
            {{#each checkTypes as |label key|}}
            <option value="{{key}}">{{label}}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group flex flex-col flex-gap-2">
        <label class="text-small text-bold text-upper text-muted">Location (optional)</label>
        <input type="text" name="location" placeholder="e.g., Dark Forest, Ancient Ruins" class="input">
    </div>

    <div class="form-group flex flex-col flex-gap-2">
        <label class="text-small text-bold text-upper text-muted">Description (optional)</label>
        <input type="text" name="description" placeholder="Context..." class="input">
    </div>

    <div class="form-group flex flex-col flex-gap-2">
        <label class="text-small text-bold text-upper text-muted">Characters</label>
        <div class="grid-2 flex-gap-4 mt-4">
            {{#each actors as |actor|}}
            <label class="flex flex-center flex-gap-4 p-4 section clickable">
                <input type="checkbox" name="actors.{{actor.id}}" value="true" checked>
                <span class="text-small">{{actor.name}}</span>
            </label>
            {{/each}}
        </div>
    </div>

    <div class="form-group flex flex-center mt-15">
        <button type="submit" class="btn btn-primary p-8">
            <i class="fas fa-search"></i> Start Recon Check
        </button>
    </div>
</form>
