<form class="{{cssClass}} {{actor.type}}" autocomplete="off">

  <header class="sheet-header">
    <div class="header-fields">
      <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" value="{{actor.name}}" placeholder="NPC Name"/>
      </div>

      <div class="form-group">
        <label for="system.hp.value">Current HP</label>
        <input name="system.hp.value" type="number" value="{{system.hp.value}}" min="0"/>
      </div>

      <div class="form-group">
        <label for="system.hp.max">Max HP</label>
        <input name="system.hp.max" type="number" value="{{system.hp.max}}" min="1"/>
      </div>
    </div>
  </header>

  <section class="sheet-body">

    <div class="attributes-section">
      <h3>Attributes</h3>
      <div class="attributes-grid">
        {{#each system.attributes as |attr key|}}
        <div class="attribute-card">
          <div class="attribute-main">
            <div class="attribute-name">{{upperCase key}}</div>
            <input name="system.attributes.{{key}}.value" type="number" value="{{attr.value}}" min="2" max="12" class="attribute-input"/>
            <div class="attribute-mod">({{numberFormat attr.mod decimals=0 sign=true}})</div>
            <button type="button" class="attribute-roll" data-attribute="{{key}}">Roll</button>
          </div>
          <div class="attribute-save">
            <button type="button" class="save-roll" data-attribute="{{key}}">SAVE</button>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    <div class="form-group stacked">
      <label for="system.details.description">Description</label>
      <textarea name="system.details.description" rows="10">{{system.details.description}}</textarea>
    </div>

  </section>
</form>
